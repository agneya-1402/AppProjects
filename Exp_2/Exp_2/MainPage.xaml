             x:Class="Exp_2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#993333" Padding="24" CornerRadius="0">
            <Label FontAttributes="Bold" Text="Hello World" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            
        </Frame>
        
